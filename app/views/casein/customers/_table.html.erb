<!-- Scaffolding generated by Casein v5.0.0.0 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Age", :age %></th>
			<th><%= casein_sort_link "Date of birth", :date_of_birth %></th>
			<th><%= casein_sort_link "Is male", :is_male %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% customers.each do |customer| %>
		<tr>
			<td><%= casein_table_cell_link customer.name, casein_customer_path(customer) %></td>
			<td><%= casein_table_cell_link customer.age, casein_customer_path(customer) %></td>
			<td><%= casein_table_cell_link customer.date_of_birth, casein_customer_path(customer) %></td>
			<td><%= casein_table_cell_link customer.is_male, casein_customer_path(customer) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_customer_path(customer), :method => :delete, :data => { :confirm => "Are you sure you want to delete this customer?" }) %>
			</td>
		</tr>
	<% end %>
</table>